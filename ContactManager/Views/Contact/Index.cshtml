@model List<Contact>

@{
    ViewData["Title"] = "Contacts";
}

<table id="contactsTable" class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Married</th>
        <th>Phone</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var contact in Model)
    {
        <tr data-id="@contact.Id">
            <td>
                <input type="text" value="@contact.Name"/>
            </td>
            <td>
                <input type="date" value="@contact.DateOfBirth.ToString("dd-MM-yyyy")"/>
            </td>
            <td>
                <input type="checkbox" @(contact.Married ? "checked" : "")/>
            </td>
            <td>
                <input type="text" value="@contact.Phone"/>
            </td>
            <td>
                <input type="number" value="@contact.Salary"/>
            </td>
            <td>
                <button>Save</button>
                <button>Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>